<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10sp"
    android:layout_marginTop="10sp"
    android:layout_marginRight="10sp">

    <ImageView
        android:id="@+id/imageViewRecyclerPedidos"
        android:layout_width="83dp"
        android:layout_height="77dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_list_pedidos_foreground" />

    <TextView
        android:id="@+id/txtNomeRecyclerPedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Nome"
        app:layout_constraintEnd_toEndOf="@+id/txtValorRecyclerPedidos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewRecyclerPedidos"
        app:layout_constraintTop_toBottomOf="@+id/txtValorRecyclerPedidos" />

    <TextView
        android:id="@+id/txtValorRecyclerPedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="R$10.00"
        android:textColor="@color/teal_700"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewRecyclerPedidos"
        app:layout_constraintTop_toTopOf="@+id/imageViewRecyclerPedidos" />

    <TextView
        android:id="@+id/txtDataRecyclerPedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="00/00/00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>