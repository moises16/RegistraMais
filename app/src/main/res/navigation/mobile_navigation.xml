<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.registramais.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.registramais.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.registramais.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/recyclerViewProductFragment"
        android:name="com.example.registramais.recyclerviewproduct.RecyclerViewProductFragment"
        android:label="Lista de Produtos"
        tools:layout="@layout/fragment_recycler_view_product" />
    <fragment
        android:id="@+id/formProductFragment"
        android:name="com.example.registramais.FormProductFragment"
        android:label="Adicionar produtos">
        <action
            android:id="@+id/action_formProductFragment_to_recyclerViewProductFragment"
            app:destination="@id/recyclerViewProductFragment" />
    </fragment>
</navigation>